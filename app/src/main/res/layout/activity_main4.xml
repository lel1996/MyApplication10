<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myapplication.Main4Activity">
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
     <ImageView
         android:layout_marginLeft="16dp"
         android:layout_width="60dp"
         android:layout_height="60dp"
         android:id="@+id/lidegong"/>

     <ImageView

         android:layout_marginLeft="16dp"
         android:layout_width="60dp"
         android:layout_height="60dp"
         android:id="@+id/lichunxia"/>
     <ImageView
         android:layout_marginLeft="16dp"
         android:layout_width="60dp"
         android:layout_height="60dp"
         android:id="@+id/lidalin"/>

     <ImageView
         android:layout_marginLeft="16dp"
         android:layout_width="60dp"
         android:layout_height="60dp"
         android:id="@+id/lielrin"/>
 </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/qunliaoed"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content">
        <Button
            android:layout_weight="1"
            android:layout_width="0.6dp"
            android:text="发送"
            android:background="@color/colorAccent"
            android:textSize="22dp"
            android:layout_height="wrap_content"
            android:id="@+id/qunliaofasong"/>
        <Button
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:layout_width="0.6dp"
            android:text="查看"
            android:background="@color/colorAccent"
            android:textSize="22dp"
            android:layout_height="wrap_content"
            android:id="@+id/qunliaochakan"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/qunliaochakaned"/>
</LinearLayout>
